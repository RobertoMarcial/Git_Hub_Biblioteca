<table>
    <thead>
          <tr>
              <th>Titulo</th>
              <th>Idioma</th>
              <th>Paginas</th>
              <th>Descripcion</th>
              <th>Autor</th>
              <th>Categoria</th>
              <th>Editorial</th>

          </tr>
    </thead>
    <tbody>
    <% @books.each do |book|%>
         <tr>
                <td><%= book.titulo %></td>
                <td><%= book.idioma %></td>
                <td><%= book.paginas %></td>
                <td><%= book.descripcion %></td>

                 <%unless book.author.nil?  %>
                <td> <%=book.author.nombre %> </td> 
                <%end%>  
                 <%unless book.category.nil?  %>
                <td> <%=book.category.categoria %> </td> 
                <%end%> 
                  <%unless book.editorial.nil?  %>
                <td> <%=book.editorial.nombre %> </td> 
                <%end%> 

         </tr>   
     <% end %>
    </tbody>
</table>
